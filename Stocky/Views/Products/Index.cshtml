@model IEnumerable<Stocky.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<p>
    @Html.ActionLink("Add Product", "New", "Products", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <text> No Produtcs have been created </text>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Sku</th>
                <th>Product Description</th>
                <th>Price</th>
                <th>Categories</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Sku</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>
                        @foreach (var category in product.Categories)
                        {
                            @category.Name;
                            <text>  </text>
                            
                        } 
                  
                    </td>
                    <td>@Html.ActionLink("Edit", "Edit", "Products", new {id = product.Id}, null)</td>
                </tr>
            }
        </tbody>
    </table>
}

